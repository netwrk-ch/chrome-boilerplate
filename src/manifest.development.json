{
    "manifest_version": 3,
    "name": "chrome-boilerplate",
    "description": "Example chrome extension",
    "version": "0.0.1",
    "background": {
        "service_worker": "/background.js"
    },
    "action": {
    },
    "host_permissions": [
        "*://*/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["content.styles.css", "icon-128.png", "icon-34.png", "popup.html"],
        "matches": ["<all_urls>"]
      }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage",
        "cookies"
    ]
}
